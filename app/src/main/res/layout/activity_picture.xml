                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/manexample"
                android:adjustViewBounds="true" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/picture_onlybottomborder"
                android:layout_marginLeft = "30dp"
                android:layout_marginRight = "30dp">

                <TextView
                    android:id="@+id/picture_update_day"
                    android:layout_height="wrap_content"
                    android:layout_width = "wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text = "2 days ago"
                    android:textSize = "10dp"
                    android:textColor = "@color/colorGrey"
                    android:layout_marginTop = "20dp"
                />
                <TextView
                    android:id = "@+id/picture_pictureName"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/picture_update_day"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Hansome gye"
                    android:textSize = "25dp"
                    android:textColor = "@color/colorBlack"
                    android:layout_marginTop = "10dp"
                    />

                <TextView
