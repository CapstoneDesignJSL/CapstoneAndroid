<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_lowerlayout"
        android:background="@drawable/homebg"
        android:id="@+id/home_upperlayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/homelogo"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <FrameLayout
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp">


                <Button
                    android:id="@+id/home_search_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop = "8dp"
                    android:layout_marginRight ="8dp"
                    android:background="@drawable/homesearchbutton"
                    android:layout_gravity= "end"/>

                <EditText
                    android:id="@+id/home_search"
                    android:layout_width="280dp"
                    android:layout_height="40dp"
                    android:background="@drawable/homesearchradiusbutton"
                    android:paddingLeft="16dp"
                    android:textColor="@color/colorGrey"
                    android:textSize="16dp" />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/home_lowerlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="vertical"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/home_indicator"
                app:ci_drawable="@drawable/home_swipe_radius"
                app:ci_height="10dp"
                app:ci_width="10dp"
                app:ci_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        </FrameLayout>


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/home_vpPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>
