<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_lowerlayout"
        android:background="@drawable/homebg"
        android:id="@+id/home_upperlayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/charge_backbtn"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/home_lowerlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/charge_icon"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:paddingTop="15dp"
            app:srcCompat="@drawable/charge_icon" />

        <ImageView
            android:id="@+id/charge_ment"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="100dp"
            app:srcCompat="@drawable/charge_ment" />

        <ImageView
            android:id="@+id/charge_bg"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_gravity=""
            android:layout_marginLeft="105dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/charge_bg" />
    </LinearLayout>
</LinearLayout>