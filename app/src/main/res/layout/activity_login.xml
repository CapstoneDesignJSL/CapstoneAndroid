<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground1"
    tools:context=".activity.Login"
    android:id="@+id/login_back1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/loginbackground2"
        android:id="@+id/login_back2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp"
            android:orientation="vertical"
            android:id="@+id/login_upperlayout"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"

                android:id="@+id/login_logo1"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/login_logo2"
                 />


            <FrameLayout
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:background="@drawable/loginradiusbutton"
                android:layout_gravity="center"
                android:layout_marginTop="90dp">


                <ImageButton
                android:layout_width="200dp"
                android:layout_height="28dp"
                android:background="@drawable/logingooglelogin"
                android:id="@+id/btn_login"
                android:layout_gravity="center"
                    android:scaleType="fitCenter"
                />
            </FrameLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="125dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/login_or"/>


            <FrameLayout
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:background="@drawable/signupradiusbutton"
                android:layout_gravity="center">

                <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                    android:id="@+id/login_signup" />
            </FrameLayout>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:id="@+id/login_bottom"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_upperlayout"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>



