<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FragmentView.UserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_lowerlayout"
            android:background="@drawable/homebg"
            android:id="@+id/home_upperlayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/home_logo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/user_logo"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <FrameLayout
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="10dp">

                    <ImageView
                        android:id="@+id/user_pgname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/user_pgname" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="27dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="145dp">

                    <Button
                        android:id="@+id/btn_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/user_logout" />
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/home_lowerlayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="양소연 회원님" />

                <FrameLayout
                    android:layout_width="360dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp">

                    <ImageView
                        android:id="@+id/user_bg1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/user_bg1" />
                    <FrameLayout
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:id="@+id/user_bg2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/user_bg2" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="36dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="300dp"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/balance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0.3" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="7dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="335dp"
                        android:layout_marginTop="15dp">

                        <Button
                            android:id="@+id/user_bg4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/user_bg4" />
                    </FrameLayout>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/user_main" />

                <Button
                    android:id="@+id/btn_charge"
                    android:layout_width="125dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="140dp"
                    android:background="@drawable/user_charge" />
            </LinearLayout>
         </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
